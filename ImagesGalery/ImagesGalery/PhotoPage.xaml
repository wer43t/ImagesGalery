<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ImagesGalery.PhotoPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="30,50" Spacing="30">
                <Frame Padding="10" BorderColor="Black" BackgroundColor="DarkGray">
                    <Entry Placeholder="Введите название" BackgroundColor="DarkGray" Text="{Binding Name}"/>
                </Frame>
            </StackLayout>
            <Image Source="{Binding PhotoPath}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>